{
  "format_version": 2,
  "submit_task_result_timeout": 6000,
  "get_task_timeout": 6000,
  "max_runner_sync_tries": 6000,
  "task_check_timeout": 6000,
  "task_check_interval": 10,
  "cell_wait_timeout": 6000,
  "end_run_readiness_timeout": 100,
  "runner_sync_timeout": 2,
  "job_heartbeat_interval": 150,
  "end_run_readiness_check_interval": 2,
  "DATASET_ROOT": "/lustre/orion/csc666/proj-shared/ducnguyen/new_nvflare_edge/AMD_NVFlare/experiment_folder/data/nlp-ner",
  "option": "32_split",
  "executors": [
    {
      "tasks": [
        "train",
        "validate"
      ],
      "executor": {
        "id": "Executor",
        "path": "nvflare.app_common.executors.learner_executor.LearnerExecutor",
        "args": {
          "learner_id": "nlp-learner"
        }
      }
    }
  ],
  "task_result_filters": [
    {
      "tasks": [
        "train"
      ],
      "filters": [
        {
          "path": "nvflare.app_common.filters.privacy_from_petina.PrivacyPetinaLibrary",
          "args": {
            "privacy_technique": "gaussian",
            "epsilon": 1,
            "gamma": 1e-05,
            "delta": 0.0001
          }
        }
      ]
    }
  ],
  "task_data_filters": [],
  "components": [
    {
      "id": "nlp-learner",
      "path": "custom.learners.nlp_learner.NLPLearner",
      "args": {
        "data_path": "{DATASET_ROOT}/{option}",
        "model_name": "bert-base-uncased",
        "learning_rate": 1e-05,
        "batch_size": 16,
        "num_labels": 3,
        "aggregation_epochs": 1
      }
    }
  ]
}
